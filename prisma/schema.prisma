generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Position {
  GOALKEEPER
  DEFENDER
  MIDFIELDER
  FORWARD
}

enum Rating {
  FAIR
  GOOD
  VERY_GOOD
  EXCELLENT
}

model Player {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  position  Position
  rating    Rating
  stamina   Int      @default(3)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // âœ… NEW (Telegram link)
  telegramUserId   BigInt?  @unique
  telegramUsername String?
  telegramFirst    String?
  telegramLast     String?
}


model TeamGeneration {
  id        String   @id @default(cuid())
  date      DateTime @unique
  teamsJson String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model AppSetting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}

model TelegramPoll {
  pollId      String   @id
  chatId      BigInt
  messageId   BigInt?
  question    String
  optionsJson String
  isClosed    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  answers     TelegramPollAnswer[]
}

model TelegramPollAnswer {
  id          String   @id @default(cuid())
  pollId      String
  userId      BigInt
  username    String?
  firstName   String?
  lastName    String?
  optionIdsJson String
  updatedAt   DateTime @updatedAt

  poll        TelegramPoll @relation(fields: [pollId], references: [pollId], onDelete: Cascade)

  @@unique([pollId, userId])
}

